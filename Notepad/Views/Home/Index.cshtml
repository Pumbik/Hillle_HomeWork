@model IEnumerable<Notepad>

@{
    ViewData["Title"] = "Notepad";
}

<div class="container shadow p-5">
    <h1>Notepad CRUD operations</h1>

    <div class="col mb-3">
        <a asp-controller="Notepad" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Add a new note</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Tags</th>
                <th scope="col">Created</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var notepad in Model)
            {
                <tr>
                    <td width="15%">@notepad.Name</td>
                    <td width="15%">@notepad.Title</td>
                    <td width="40%">@notepad.Description</td>
                    <td width="15%">@notepad.Tags</td>
                    <td width="15%">@notepad.Created</td>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <span style="margin-right: 5px;">
                                <a asp-controller="Notepad" asp-action="Edit" asp-route-id="@notepad.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            </span>
                            <span>
                                <a asp-controller="Notepad" asp-action="Delete" asp-route-id="@notepad.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                            </span>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
