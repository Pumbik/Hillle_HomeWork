@model Notepad


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Add note</h2>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Note name</label>
                <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Enter Name" required>
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Title">Title</label>
                <input type="number" class="form-control mb-3" asp-for="Title" placeholder="Enter title">
                <span asp-validation-for="Title" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Description">Description</label>
                <input type="text" class="form-control mb-3" asp-for="Description" placeholder="Enter description">
                <span asp-validation-for="Description" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Tags">Tags</label>
                <input type="text" class="form-control mb-3" asp-for="Tags" placeholder="Enter Tags">
                <span asp-validation-for="Tags" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Created">Created At</label>
                <input type="datetime-local" class="form-control" asp-for="Created">
                <span asp-validation-for="Created" class=" alert-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="Notepad" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}